RewriteEngine On

# 如果请求的是存在的文件或目录，直接访问
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# API 路由重写
RewriteRule ^api/(health|info|test)$ api_router.php [L]
RewriteRule ^official-api/news api_router.php [L]

# 默认路由到 index.php
RewriteRule ^(.*)$ index.php [QSA,L]
